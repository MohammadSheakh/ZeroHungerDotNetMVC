<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="@Url.Content("~/Content/custom-styles.css")" rel="stylesheet" type="text/css" />
    @*@Styles.Render("~/Content/custom-styles.css")*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head><body>
    @*custom-deep-green-color*@
    <nav class="navbar sticky-top custom-deep-green-color  navbar-expand-sm navbar-toggleable-sm navbar-dark ">
        @*bg-dark*@
        <div class="container">
            @Html.ActionLink("ZERO HUNGER", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between  ">
                <ul class="navbar-nav flex-grow-1 justify-content-center">
                    @*Display Name, Method Name ,  Action name*@
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("New Arrivals", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Offers", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About us", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("FAQ", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Blog", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@*@Html.ActionLink("Login", "sellerLogin", "Seller", new { area = "" }, new { @class = "nav-link" })*@</li>



                    @*// logged in user image  and name*@
                    <li>
                        @if (Session["userImage"] != null)
                        {

                            <img style="width:30px; " class="rounded-2 mt-2" src="~/Uploads/@Session["userImage"]" alt="Image Can not be shown from _Layout.cshtml view" />
                        }

                    </li>
                    <li style="color: aliceblue" class="nav-link">
                        <a href="/Seller/SellerProfile/@Session["userid"]">@Session["userName"]</a>

                    </li>
                    @*<li style="color: aliceblue" class="nav-link">@Session["userId"]</li>
        <li style="color: aliceblue" class="nav-link">@Session["userEmail"]</li>*@


                    @if (Session["userId"] == null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Login
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/NGO/NGOLogin">NGO</a></li>
                                <li><a class="dropdown-item" href="Seller/sellerLogin">Employee</a></li>
                                <li><a class="dropdown-item" href="/FoodSource/FoodSourceLogin">FoodSource</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Test User</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        @*<li class="nav-item">
                            <a class="nav-link " href="/Home/logout">

                                Logout
                            </a>
                        </li>*@
                        <li>@Html.ActionLink("Logout", "logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        
                    }

                <li class="nav-item">
                    @if (Convert.ToInt32(Session["CartCount"]) > 0)
                    {

                        <a class="nav-link " href="User/showCart">



                            Cart(
                            @if (Session["CartCount"] != null)
                            {
                                <Span>@Session["CartCount"]</Span>
                            }

                            )
                        </a>
                        
                    }
                    else
                    {
                        <a class="nav-link " href="">

                            Cart(
                            @if (Session["CartCount"] != null)
                            {
                                <Span>@Session["CartCount"]</Span>
                            }

                            )
                        </a>
                        
                    }
                </li>

                </ul>
            </div>
        </div>
    </nav>




    <div @*class="container body-content"*@>

        @RenderBody()
        <hr />
        <footer class="text-center">
            @{
                var date = @Convert.ToInt32(@DateTime.Now.Year) + 1;

            }
            <p>&copy; @DateTime.Now.Year - @date - Advance Web Tech</p>
        </footer>
    </div>




    @*/////////////////////////////////////////////////////////////////////////////*@


    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>

    <script src="~/js/site.min.js" asp-append-version="true"></script>




    <script type="text/javascript" src='http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>



    @*///////////////////////////////////////////////////////////////////////*@



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



